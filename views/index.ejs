<h1>Test de Neo4j sur Heroku !</h1>

<h3>Interface gestion basique</h3>

<!-- SUPRESSION -->
<form method="post" action="/db/delete">
	<label>Supprimer tous les labels et tous les noeuds</label>
	<input type="submit" value="SUPPRIMER">
</form>

<!-- AJOUT PERS-->
<h3>Add an actor to the database</h3>
<form method="post" action="/person/add">
	<label>Nom</label>
	<input type="text" name="name">
	<label>Age</label>
	<input type="text" name="age">
	<input type="submit" value="submit">
</form>


<br><br>
<h3>Liste noeuds type "Person"</h3>

<ul>
<% persons.forEach(function(person) { %>
    <li><%= person.name %></li>
<% }); %>
</ul>