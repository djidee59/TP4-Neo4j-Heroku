<h3><u>Liste noeuds type "Person"</u></h3>

<table id="table1">
	  	<tr>
		    <th>ID neo4j</th>
		    <th>Name</th>
		    <th>Age</th>
		    <th>Job</th>
		    <th>Suppr.</th>
  		</tr>
		<% persons.forEach(function(person) { %>
		<tr>
			<td><%= person.id %> </td>
	    	<td><%= person.name %> </td>
	    	<td><%= person.age %> </td>
	    	<td><%= person.job %> </td>
	    	<td><a href="/pers/del/<%= person.id %>">âœ˜</a></td>
	    </tr>
<% }); %>
</table>


