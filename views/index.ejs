<h1>Test de Neo4j sur Heroku !</h1>

<h3><u>Interface gestion basique</u></h3>

<!-- SUPRESSION -->
<form method="post" action="/db/delete">
	<label>Supprimer tous les noeuds</label>
	<input type="submit" value="SUPPRIMER">
</form>

<!-- AJOUT PERS-->
<form method="post" action="/person/add">
	<label>Nom</label>
	<input type="text" name="nom">
	<label>Age</label>
	<input type="text" name="age">
	<label>Job</label>
	<input type="text" name="job">
	<input type="submit" value="AJOUTER PERSONNE">
</form>

<!-- AJOUT LIEU-->
<form method="post" action="/building/add">
	<label>Batiment</label>
	<input type="text" name="nameBat">
	<label>Adresse</label>
	<input type="text" name="adresse">
	<input type="submit" value="AJOUTER BATIMENT">
</form>


<h3><u>Interface gestion EXCEL</u></h3>


